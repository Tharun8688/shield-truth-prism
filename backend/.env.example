# Pi Shield Backend Configuration

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://pishield:pishield_dev_password@localhost:5432/pishield

# Redis Queue
REDIS_URL=redis://localhost:6379/0

# Google Cloud
GCS_BUCKET=pi-shield-uploads-dev
GOOGLE_APPLICATION_CREDENTIALS=./gcp-credentials.json

# File Processing Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
MAX_VIDEO_DURATION=300  # 5 minutes in seconds
FRAME_SAMPLE_RATE=1     # 1 frame per second

# Worker Configuration
WORKER_ID=worker-local-1

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Monitoring (optional)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com